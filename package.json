{
  "name": "real-ddd-clean-architecture-cqrs-example-nest-js",
  "version": "1.0.0",
  "description": "",
  "author": "RzayevTamerlan",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development HOST=local nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod:local": "cross-env NODE_ENV=production HOST=local WEB_API_PORT=8080 node dist/main",
    "start:prod": "cross-env NODE_ENV=production HOST=server WEB_API_PORT=8080 node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config tests/jest-e2e.json",
    "mikro-orm": "mikro-orm --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:generate:dev": "cross-env NODE_ENV=development HOST=local mikro-orm migration:create --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:generate:prod:local": "cross-env NODE_ENV=production HOST=local mikro-orm migration:create --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:generate:prod": "cross-env NODE_ENV=production HOST=server mikro-orm migration:create --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:up:dev": "cross-env NODE_ENV=development HOST=local mikro-orm migration:up --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:up:prod:local": "cross-env NODE_ENV=production HOST=local mikro-orm migration:up --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:up:prod": "cross-env NODE_ENV=production HOST=server mikro-orm migration:up --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:down:dev": "cross-env NODE_ENV=development HOST=local mikro-orm migration:down --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:pending": "mikro-orm migration:pending --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "migration:list": "mikro-orm migration:list --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "schema:create": "mikro-orm schema:create --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "schema:drop": "mikro-orm schema:drop --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "schema:update": "mikro-orm schema:update --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "schema:fresh": "mikro-orm schema:fresh --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "seed:dev": "cross-env NODE_ENV=development HOST=local mikro-orm seeder:run --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "seed:prod": "cross-env NODE_ENV=production HOST=server mikro-orm seeder:run --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "seed:prod:local": "cross-env NODE_ENV=production HOST=local mikro-orm seeder:run --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "cache:clear": "mikro-orm cache:clear --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "cache:generate": "mikro-orm cache:generate --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts",
    "debug": "mikro-orm debug --config src/shared/infrastructure/persistence/mikro-orm/db/mikro-orm.config.ts"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.4.16",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.4.16",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@mikro-orm/cli": "^6.4.16",
    "@mikro-orm/migrations": "^6.4.16",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
